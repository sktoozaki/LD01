<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kk.ld01.activities.MainActivity"
    android:orientation="vertical"
    android:background="@mipmap/title_background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@mipmap/logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_signin"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/email_mainA_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_email"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        />

    <EditText
        android:id="@+id/password_mainA_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_password"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/main_account"
            android:textColor="@color/white"
            android:layout_weight="2"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_signin"
            />

    </LinearLayout>

</LinearLayout>
